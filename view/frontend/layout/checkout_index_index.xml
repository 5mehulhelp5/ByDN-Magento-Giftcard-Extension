<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="billing-step" xsi:type="array">
                                            <item name="component" xsi:type="string">uiComponent</item>
                                            <item name="children" xsi:type="array">
                                                <item name="payment" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="afterMethods" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="giftcard" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Bydn_Giftcard/js/view/payment/giftcard</item>
                                                                    <item name="children" xsi:type="array">
                                                                        <item name="errors" xsi:type="array">
                                                                            <item name="sortOrder" xsi:type="string">0</item>
                                                                            <item name="component" xsi:type="string">Bydn_Giftcard/js/view/payment/giftcard-messages</item>
                                                                            <item name="displayArea" xsi:type="string">messages</item>
                                                                        </item>
                                                                        <item name="captcha" xsi:type="array">
                                                                            <item name="component" xsi:type="string">Bydn_Giftcard/js/view/payment/captcha</item>
                                                                            <item name="displayArea" xsi:type="string">captcha</item>
                                                                            <item name="formId" xsi:type="string">sales_rule_coupon_request</item>
                                                                            <item name="configSource" xsi:type="string">checkoutConfig</item>
                                                                        </item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="summary" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="totals" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="giftcard_discount" xsi:type="array">
                                                            <item name="component"  xsi:type="string">Bydn_Giftcard/js/view/checkout/summary/giftcard_discount</item>
                                                            <item name="sortOrder" xsi:type="string">45</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="template" xsi:type="string">Bydn_Giftcard/checkout/summary/giftcard_discount</item>
                                                                <item name="title" xsi:type="string">Giftcard discount</item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
